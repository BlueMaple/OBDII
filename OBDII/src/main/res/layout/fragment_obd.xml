<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.nju.software.obdii.ui.OBDFragment">

    <ImageView
        android:id="@+id/dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/dial_desc"
        android:src="@drawable/dial"/>

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/pointer_desc"
        android:src="@drawable/pointer"/>

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dial"
        android:layout_alignLeft="@+id/dial"
        android:layout_alignRight="@+id/dial"
        android:layout_alignTop="@+id/dial"
        android:gravity="center"
        android:text="24.58Km/h"
        android:textSize="30sp"
        android:textStyle="bold"/>

</RelativeLayout>
